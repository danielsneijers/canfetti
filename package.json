{
  "name": "canfetti",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "run-s cleanup watch",
    "build": "NODE_ENV=production webpack -p",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix --project tsconfig.json",
    "watch": "NODE_ENV=development webpack-dev-server --hot --inline",
    "cleanup": "rm -rf ./dist && mkdir dist",
    "precommit": "lint-staged",
    "test": "jest --coverage --no-cache",
    "test:watch": "jest --watch"
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --parser typescript --write 'src/**/*.ts'",
        "yarn run lint",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@types/jest": "^23.3.1",
    "awesome-typescript-loader": "^5.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  }
}
